# Backend Configuration
NODE_ENV=production
PORT=5000
DB_URI=mongodb://mongo:27017/saas_dashboard

# JWT Authentication
JWT_SECRET=your-very-secure-secret-key
JWT_EXPIRES_IN=7d

# CORS Policy
CORS_ORIGIN=http://localhost:3000

# Email Service
EMAIL_FROM=admin@yourapp.com
EMAIL_SMTP_HOST=smtp.mailtrap.io
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-smtp-user
EMAIL_SMTP_PASS=your-smtp-pass

# Logging
LOG_LEVEL=info

# Multi-Tenant Default
DEFAULT_TENANT_NAME=default-tenant

# Feature Toggles
ENABLE_FEATURE_TOGGLES=true
ENABLE_FEEDBACK=true

# Frontend Environment Variables
REACT_APP_API_BASE_URL=http://localhost:5000/api
REACT_APP_FEATURE_TOGGLES=true
REACT_APP_FEEDBACK_ENABLED=true